<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
        <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
        <link href='{{ asset('css/style.css') }}' rel='stylesheet'>
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <header class="shadow-lg position-absolute">
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <div class="container-fluid fixed-top">
                    <a class="navbar-brand" href="{{ path('app_home') }}"><i class='bx bx-cube-alt fs-1 bx-burst-hover'></i></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav mb-2 mb-lg-0 w-100 px-2">
                            <li class="nav-item">
                                <a class="nav-link {{ current_nav is defined and current_nav is same as('home') ? 'active' }}" href="{{ path('app_home') }}"><i class="bx bx-home"></i> Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_home') ~ '#tricks' }}"><i class='bx bx-landscape'></i> Tricks</a>
                            </li>
                            {% if app.user %}
                                <li class="nav-item">
                                    <a class="nav-link {{ current_nav is defined and current_nav is same as('new') ? 'active' }}" href="#"><i class="bx bx-pencil"></i> Nouveau Trick</a>
                                </li>                           
                                <li class="nav-item ms-md-auto">
                                    <a class="nav-link {{ current_nav is defined and current_nav is same as('my_profile') ? 'active' }}" href="#"><i class="bx bx-user"></i> {{ app.user.username }}</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {{ false ? 'active' }}" href="{{ path('app_logout') }}"><i class="bx bx-log-out-circle"></i> DÃ©connexion</a>
                                </li> 
                            {% else %}
                                <li class="nav-item ms-md-auto">
                                    <a class="nav-link  {{ current_nav is defined and current_nav is same as('register') ? 'active' }}" href="#"><i class="bx bx-user"></i> Inscription</a>
                                </li>                            
                                <li class="nav-item">
                                    <a class="nav-link  {{ current_nav is defined and current_nav is same as('login') ? 'active' }}" href="#"><i class="bx bx-log-in-circle"></i> Connexion</a>
                                </li>  
                            {% endif %}

                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        {% block body %}

        {% endblock %}
        <footer class="py-4 bg-dark footer mt-auto">
            <div class="container d-flex">          
                <a href="https://github.com/maxence-bonnet/OCR_SnowTricks" class="p-2 link-light"><i class='bx bxl-github fs-3'></i></a>
                <a href="https://www.linkedin.com/in/maxence-bonnet-b28a32203/" class="p-2 link-light"><i class='bx bxl-linkedin-square fs-3' ></i></a>
            </div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> 
    </body>
</html>
