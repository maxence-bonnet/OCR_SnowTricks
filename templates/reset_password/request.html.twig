{% extends 'base_hero.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block content %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="h3 mb-3 font-weight-normal text-center">Réinitialiser le mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.username) }}
        <small>
            Un lien pour réinitialiser le mot de passe sera envoyé à votre adresse email 
        </small>

        <div class="mt-3 text-center">
            <button class="btn btn-primary" type="submit">Confirmer la requête</button>
            <a href="{{ path('app_login') }}" class="mt-3 d-block">Retour</a>                    
        </div>

    {{ form_end(requestForm) }}
{% endblock %}
